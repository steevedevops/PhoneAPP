<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.programing.steeve.steeve_bt.UserInterface">

    <TextView
        android:id="@+id/IdControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Steeve Control"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Idled1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdControl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Button"
        tools:text="led1" />

    <Button
        android:id="@+id/Idled2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Idled1"
        android:layout_marginTop="26dp"
        android:text="Apagar"
        tools:text="led2" />

    <Button
        android:id="@+id/Idled3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Desconectar"
        tools:text="led3" />

    <Button
        android:id="@+id/idConectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdControl"
        android:layout_centerHorizontal="true"
        android:text="Conectar" />
</RelativeLayout>
